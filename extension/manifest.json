{
  "manifest_version": 3,
  "name": "Talent Wharf - Recruitment Capture",
  "description": "Capture candidates from LinkedIn and Gmail directly into your Talent Wharf recruitment pipeline.",
  "version": "1.0.0",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://mail.google.com/*",
    "http://localhost:3001/*",
    "https://api.talentwharf.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["src/config.js", "src/content/linkedin.js"],
      "css": ["src/content/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["src/config.js", "src/content/gmail.js"],
      "css": ["src/content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "options_page": "src/options/options.html"
}
